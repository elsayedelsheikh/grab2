<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4" main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Repeat num_cycles="3">
      <Sequence>
        <SaySomething message="Moving to Point #1"/>
        <SubTree ID="MoveTo" target="0.35;0.3;0.25;1;0;0;0"/>
        <SaySomething message="Moving to Point #2"/>
        <SubTree ID="MoveTo" target="0.51;-0.19;0.45;1;0;0;0"/>
        <SaySomething message="Moving to Point #3"/>
        <SubTree ID="MoveTo" target="-0.34;-0.14;0.25;1;0;0;0"/>
      </Sequence>
    </Repeat>
  </BehaviorTree>

  <BehaviorTree ID="MoveTo">
    <Sequence>
      <ComputePlanToTargetIK target_ik="{target}" trajectory="{trajectory_msg}"/>
      <Move trajectory="{trajectory_msg}"/>
    </Sequence>
  </BehaviorTree>

</root>
